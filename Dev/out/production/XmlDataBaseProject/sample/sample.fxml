<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import java.lang.String?>
<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sample.Controller">
    <children>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
            <children>
                <TextField fx:id="mainTitle" layoutX="141.0" layoutY="77.0" prefHeight="27.0" prefWidth="249.0"/>
                <Label layoutX="14.0" layoutY="53.0"/>
                <Button fx:id="deleteAuthor" onAction="#deleteAuthor" layoutX="197.0" layoutY="164.0"
                        mnemonicParsing="false" text="Delete author"/>
                <TextField fx:id="deleteAuthorName" layoutX="14.0" layoutY="164.0"/>
                <TextField fx:id="addAuthorName" layoutX="14.0" layoutY="210.0"/>
                <Button fx:id="addAuthor" onAction="#addAuthorClicked" layoutX="205.0" layoutY="210.0"
                        mnemonicParsing="false" text="Add author"/>
                <Button fx:id="updateAuthor" onAction="#updateAuthorClicked" layoutX="292.0" layoutY="276.0"
                        mnemonicParsing="false" text="Update author name"/>
                <Label layoutX="14.0" layoutY="267.0" text="Old name"/>
                <Label layoutX="14.0" layoutY="308.0" text="New name"/>
                <TextField fx:id="oldAuthorName" layoutX="98.0" layoutY="262.0"/>
                <TextField fx:id="newAuthorName" layoutX="98.0" layoutY="303.0"/>
                <Label layoutX="14.0" layoutY="82.0" text="Updates for title"/>
                <Button onAction="#deleteTitleClicked" layoutX="421.0" layoutY="77.0" mnemonicParsing="false"
                        text="Delete title"/>
                <Button onAction="#addTitleClicked" layoutX="436.0" layoutY="26.0" mnemonicParsing="false"
                        text="Add new title"/>
                <TextField fx:id="newTitleName" layoutX="15.0" layoutY="26.0" prefHeight="27.0" prefWidth="249.0"/>
                <TextField fx:id="updateTitleName" layoutX="14.0" layoutY="122.0"/>
                <Button onAction="#updateTitleClicked" layoutX="203.0" layoutY="122.0" mnemonicParsing="false"
                        text="Update title"/>
                <ChoiceBox fx:id="typesChoiceBox" layoutX="286.0" layoutY="26.0">
                    <items>
                    </items>
                </ChoiceBox>
            </children>
        </AnchorPane>
    </children>
</VBox>
