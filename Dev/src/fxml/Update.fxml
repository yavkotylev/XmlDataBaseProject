<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sample.UpdateController">
    <children>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="452.0" prefWidth="640.0" VBox.vgrow="ALWAYS">
            <children>
                <TextField fx:id="mainTitleName" layoutX="141.0" layoutY="77.0" prefHeight="27.0" prefWidth="249.0"/>
                <Label layoutX="14.0" layoutY="53.0"/>
                <Button fx:id="deleteAuthor" layoutX="197.0" layoutY="164.0" mnemonicParsing="false"
                        onAction="#deleteAuthor" text="Delete author"/>
                <TextField fx:id="deleteAuthorName" layoutX="14.0" layoutY="164.0"/>
                <TextField fx:id="addAuthorName" layoutX="14.0" layoutY="210.0"/>
                <Button fx:id="addAuthor" layoutX="205.0" layoutY="210.0" mnemonicParsing="false"
                        onAction="#addAuthorClicked" text="Add author"/>
                <Button fx:id="updateAuthor" layoutX="292.0" layoutY="276.0" mnemonicParsing="false"
                        onAction="#updateAuthorClicked" text="Update author name"/>
                <Label layoutX="14.0" layoutY="267.0" text="Old name"/>
                <Label layoutX="14.0" layoutY="308.0" text="New name"/>
                <TextField fx:id="oldAuthorName" layoutX="98.0" layoutY="262.0"/>
                <TextField fx:id="newAuthorName" layoutX="98.0" layoutY="303.0"/>
                <Label layoutX="14.0" layoutY="82.0" text="Updates for title"/>
                <Button layoutX="421.0" layoutY="77.0" mnemonicParsing="false" onAction="#deleteTitleClicked"
                        text="Delete publication by title"/>
                <Button layoutX="436.0" layoutY="26.0" mnemonicParsing="false" onAction="#addTitleClicked"
                        text="Add new title"/>
                <TextField fx:id="newTitleName" layoutX="15.0" layoutY="26.0" prefHeight="27.0" prefWidth="249.0"/>
                <TextField fx:id="updateTitleName" layoutX="14.0" layoutY="122.0"/>
                <Button layoutX="203.0" layoutY="122.0" mnemonicParsing="false" onAction="#updateTitleClicked"
                        text="Update title"/>
                <ChoiceBox fx:id="typesChoiceBox" layoutX="286.0" layoutY="26.0">
                    <items>
                    </items>
                </ChoiceBox>
                <TextArea fx:id="updatedPublication" editable="false" layoutX="354.0" layoutY="354.0" prefHeight="131.0" prefWidth="278.0"/>
            </children>
        </AnchorPane>
    </children>
</VBox>
