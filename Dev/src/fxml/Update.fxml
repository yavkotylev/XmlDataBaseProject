<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sample.UpdateController">
    <children>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="452.0" prefWidth="640.0" VBox.vgrow="ALWAYS">
            <children>
                <TextField fx:id="mainTitleName" layoutX="230.0" layoutY="31.0" prefHeight="27.0" prefWidth="249.0"/>
                <Label layoutX="14.0" layoutY="53.0"/>
                <Button layoutX="283.0" layoutY="170.0" mnemonicParsing="false" onAction="#deleteAuthor"
                        text="Delete author from title"/>
                <TextField fx:id="deleteAuthorName" layoutX="98.0" layoutY="170.0"/>
                <TextField fx:id="addAuthorName" layoutX="98.0" layoutY="216.0"/>
                <Button layoutX="283.0" layoutY="216.0" mnemonicParsing="false" onAction="#addAuthorClicked"
                        text="Add author to title"/>
                <Button layoutX="283.0" layoutY="290.0" mnemonicParsing="false" onAction="#updateAuthorClicked"
                        text="Update author name"/>
                <Label layoutX="17.0" layoutY="281.0" text="Old name"/>
                <Label layoutX="14.0" layoutY="322.0" text="New name"/>
                <TextField fx:id="oldAuthorName" layoutX="98.0" layoutY="276.0"/>
                <TextField fx:id="newAuthorName" layoutX="98.0" layoutY="317.0"/>
                <Label layoutX="91.0" layoutY="36.0" text="Updates for title"/>
                <Button layoutX="436.0" layoutY="77.0" mnemonicParsing="false" onAction="#deleteTitleClicked"
                        text="Delete publication by title"/>
                <TextField fx:id="updateTitleName" layoutX="98.0" layoutY="124.0"/>
                <Button layoutX="283.0" layoutY="124.0" mnemonicParsing="false" onAction="#updateTitleClicked"
                        text="Update title"/>
                <TextArea fx:id="updatedPublication" editable="false" layoutX="379.0" layoutY="375.0" prefHeight="211.0"
                          prefWidth="372.0"/>
                <Label layoutX="19.0" layoutY="129.0" text="New title"/>
                <Label layoutX="7.0" layoutY="175.0" text="Author name"/>
                <Label layoutX="7.0" layoutY="221.0" text="Author name"/>
            </children>
        </AnchorPane>
    </children>
</VBox>
